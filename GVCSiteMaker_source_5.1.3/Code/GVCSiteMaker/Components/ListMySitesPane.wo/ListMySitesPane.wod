SiteRepetition : WORepetition {
    item = aSite;
    list = configurableWebsites;
}

TRContainer : WOGenericContainer {
    elementName = "tr";
    style = rowStyle;
}

EditSiteHyperlink: WOHyperlink {
    action = editSite;
}

SiteIDString : WOString {
    value = aSite.siteID;
}

BannerNameString : WOString {
    value = aSite.banner.bannerText;
}

PrincipalOwnerString : WOString {
    value = aSite.owner.userID;
}

QuotaString : WOString {
    value = aSite.megQuota;
}

PercentFreeString : WOString {
    value = ~100 - aSite.percentageOfQuotaUsed;
    numberformat = "###.00";
}

DateCreatedString : WOString {
    value = aSite.dateCreated;
    dateformat = application.properties.CompressedDateFormat;  // VALID
}

DateModifiedString : WOString {
    value = aSite.dateLastModified;
    dateformat = application.properties.CompressedDateFormat;  // VALID
}
