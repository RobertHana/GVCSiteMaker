DynamicBody: DynamicBodyComponent 
{
    pageTitle = "Choose Site to Configure";
    pageType = "ListMySitesPane";
    isAdmin = false;
    isConfigPage = false;  // not a configuration page
    hasSite = false;
}

AjaxUpdateArea : AjaxUpdateContainer {
    id = "ListMySitesPane";
}

UserIDString : WOString {
    value = session.currentUser.userID;
}

HelpComponent : HelpComponent {
    pageClass = "com.gvcsitemaker.pages.ListMySitesPane";
}

InfoPercentFreeString : WOString {
    value = application.properties.WebsiteFileUsageWarningLevelPercent;  // VALID
}

SortOnNameHyperlink : AjaxUpdateLink {
    action = sortOnSiteID;
    title = "Sort on name";
    updateContainerID = "ListMySitesPane";
}

SortOnNameDirectionImage: WOImage {
    border = 0;
    src = sortDirectionImage;
}

ShowSortedNameConditional : WOConditional {
    condition = isSortingOnName;
}

SortOnBannerHyperlink : AjaxUpdateLink {
    action = sortOnBanner;
